<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <ul>
      <% if current_user %>
        <li><a href="/auth/logout">Logout</a></li>
      <% else %>
        <li><a href="/auth/login">Login</a></li>
      <% end %>
      <li><a href="/protected">Protected</a></li>
    </ul>

    <% if flash[:success] %>
      <%= flash[:success] %>
    <% end %>
    <% if flash[:error] %>
      <%= flash[:error] %>
    <% end %>
    <%= yield %>

  </body>
</html>
