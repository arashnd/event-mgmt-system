<div class="content">
  <div class="sub-nav">
    <h3 class="title">Feedback</h3>
  </div>
  <% current_user.feedbacks.each do |feedback| %>
    <div class="form-group">
      <h4><%= feedback.title %></h4>
      <p><%= feedback.statement %></p>
      <p><a href="/users/feedback/<%= feedback.id %>">Delete</a></p>
    </div>
  <% end %>
  <form class="form" action="/users/feedback" method="post">
    <div class="form-group">
      <label for="feedback[title]">Title</label>
      <input type="text" name="feedback[title]" value="">
    </div>
    <div class="form-group">
      <label for="feedback[statement]">Say Some thing</label>
      <textarea name="feedback[statement]" rows="8" cols="80"></textarea>
    </div>
    <div class="form-group">
      <label for="submit">&nbsp;</label>
      <input type="submit" name="submit" value="Save" class="btn-green">
    </div>
  </form>
</div>
