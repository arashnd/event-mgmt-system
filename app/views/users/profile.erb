<div class="content">
  <div class="sub-nav">
    <h3 class="title">User Profile</h3>
  </div>
  <form class="form" action="/users/profile" method="post">
    <div class="form-group">
      <label for="user[profile][profile_pic]">Profile Picture</label>
      </div>
    <div class="form-group">
      <label for="">Change Profile Picture</label>
      <input type="file" name="file" value="">
    </div>
    <div class="form-group">
      <label for="user[first_name]">First Name :</label>
      <input type="text" name="user[first_name]" value="<%= current_user.first_name %>">
    </div>
    <div class="form-group">
      <label for="user[last_name]">Last Name :</label>
      <input type="text" name="user[first_name]" value="<%= current_user.last_name %>">
    </div>
    <div class="form-group">
      <label for="profile[phone_no]">Phone No :</label>
      <input type="text" name="profile[phone_no]" value="<%= @profile.phone_no %>">
    </div>
    <div class="form-group">
      <label for="profile[address]">Address :</label>
      <input type="text" name="profile[address]" value="<%= @profile.address %>">
    </div>
    <div class="form-group">
      <label for="">&nbsp;</label>
      <input type="submit" name="" value="Save">
    </div>
  </form>
</div>
