<h2>Register</h2>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error[0] %></li>
    <% end %>
  </ul>
<%end %>

<form class="" action="/users/new/register" method="post">
  <div class="">
    <label for="user[first_name]">First Name :</label><br />
    <input type="text" name="user[first_name]" value="">
  </div>
  <div class="">
    <label for="user[last_name]">Last Name :</label> <br />
    <input type="text" name="user[last_name]" value="">
  </div>
  <div class="">
    <label for="user[email]">email :</label><br />
    <input type="text" name="user[email]" value="">
  </div>
  <div class="">
    <label for="user[password]">Password :</label><br />
    <input type="password" name="user[password]" >
  </div>
  <div class="">
    <label for="user[password_confirmation]">Confirm password :</label><br />
    <input type="password" name="user[password_confirmation]" >
  </div>
  <div class="">
    <input type="submit" value="Register">
  </div>
</form>
