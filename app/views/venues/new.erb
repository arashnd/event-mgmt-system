<div class="dashboard-errors">
  <p>Following erros prevented this form being saved</p>
</div>

<div class="content">
  <div class="sub-nav">
    <h3 class="title">Add an venue</h3>
    <a href="/dashboard/cities/new" class="btn-green btn-green-o "><i class="fa fa-plus" aria-hidden="true"></i>Add A City</a>
  </div>
  <form class="form" action="/dashboard/venues/create" method="post" enctype='multipart/form-data'>
      <div class="form-group">
        <label for="">Venu Photo</label>
        <input type="file" name="file" value="">
      </div>
      <div class="form-group">
        <label for="venue[name]">Name</label>
        <input type="text" name="venue[name]" value="">
      </div>
      <div class="form-group">
        <label for="venue[city_id]">City</label>

          <select class="" name="venue[city_id]">
            <% @cities.each do |city| %>
              <option value="<%= city.id %>"><%= city.name %></option>
            <% end %>
          </select>
      </div>

      <div class="form-group">
        <label for="venue[location]">Location</label>
        <input type="text" name="venue[location]" value="">
      </div>
      <div class="form-group">
        <label for="venue[capacity]">Capacity</label>
        <input type="text" name="venue[capacity]" value="">
      </div>
      <div class="form-group">
        <label for="venue[desciption]">Desciption</label>
        <textarea name="venue[desciption]" rows="8" cols="50"></textarea>
      </div>
      <div class="form-group">
        <label for="">&nbsp;</label>
        <input type="submit" value="Create" class="btn-green">
      </div>
  </form>

</div>
